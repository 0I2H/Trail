<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.trail.view.map.timeline.TimelineFragment">
    <!--    tools:showIn="@layout/activity_map">-->

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.trail.view.map.timeline.TimelineViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white_top_round"
        android:backgroundTint="@color/background2"
        android:paddingHorizontal="20dp"
        android:paddingBottom="32dp"
        android:nestedScrollingEnabled="true"
        app:behavior_hideable="false"
        app:behavior_peekHeight="130dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="130dp"
            android:paddingVertical="10dp"
            android:src="@drawable/line_horizontal"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/current_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primary"
            android:src="@drawable/shape_circle_border"
            app:layout_constraintStart_toStartOf="@id/pin_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/indicator" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:layerType="software"
            android:src="@drawable/line_dotted_vertical"
            app:layout_constraintTop_toBottomOf="@id/current_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:id="@+id/current_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape_white_round_10dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/current_icon"
            app:layout_constraintTop_toBottomOf="@+id/indicator">

            <TextView
                android:id="@+id/current_panel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Current"
                android:textColor="@color/text_hint" />


            <TextView
                android:id="@+id/pin_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/current_panel_label"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text=" 47Â° 45' 3.8736'' N Washington"
                android:textColor="@color/text_dark_gray" />


            <TextView
                android:id="@+id/pin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/current_panel_label"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="(Auto Pin: Remaining 8/20 steps)"
                android:textColor="@color/text_dark_gray" />

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pin_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/current_panel"
            app:pin_adapter="@{viewModel.pinListLiveData}"
            tools:listitem="@layout/item_timeline_pin" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>