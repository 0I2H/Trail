<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.trail.view.dashboard.DashboardActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.trail.view.dashboard.DashboardViewModel" />
    </data>

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:background="@color/background"-->
    <!--        android:gravity="center_horizontal"-->
    <!--        android:nestedScrollingEnabled="true"-->
    <!--        android:orientation="vertical">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/shape_orange_bottom_round"
            android:elevation="0dp"
            android:orientation="horizontal"
            android:padding="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_circle"
                android:elevation="30dp"
                android:onClick="@{() -> viewModel.goToProfileActivity()}"
                android:src="@drawable/default_profile_img"
                android:cropToPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heading_dashboard"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/locating_state_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:elevation="30dp"
                android:onClick="@{() -> viewModel.goToSettingsActivity()}"
                android:src="@drawable/btn_explore"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/dashboard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_below="@id/header"
            android:layout_margin="20dp"
            android:background="@drawable/shape_white_round"
            android:elevation="10dp"
            android:onClick="@{() -> viewModel.goToMapActivity()}"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/dashboard_trail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/trail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Trip to Jeju Island"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/trail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trail_name"
                    android:text=" Day 13 (Mar, 2021 ~ Aug, 2021)"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_more_vert"
                    android:layout_marginEnd="5dp"
                    android:background="@color/transparent"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>


            <View
                android:id="@+id/dashboard_divider"
                style="@style/DividerHorizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"/>

            <RelativeLayout
                android:id="@+id/dashboard_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <TextView
                android:id="@+id/path_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_circle_border"
                android:backgroundTint="@color/primary"
                android:gravity="center"
                android:text="210"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/path_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/path_id"
                android:text="Path No.20"
                android:textColor="@color/text_dark_gray"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/path_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/path_name"
                android:layout_toEndOf="@id/path_id"
                android:text="Total 201 pins"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                android:textStyle="normal" />

                <TextView
                    android:id="@+id/path_state_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/path_date"
                    android:layout_toEndOf="@id/path_id"
                    android:text="State: "
                    android:textColor="@color/text_hint"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/path_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/path_date"
                    android:layout_toEndOf="@id/path_state_label"
                    android:text="Location tracking paused"
                    android:textColor="@color/highlight"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/pin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_round_play_arrow_24"
                    android:textSize="14sp"
                    android:textStyle="normal" />
        </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dashboard"
            android:orientation="vertical">

            <Button
                android:id="@+id/gps_test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.startLoggingService()}"
                android:text="start logging" />

            <Button
                android:id="@+id/gps_test_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.pauseLoggingService()}"
                android:text="log pause" />

            <Button
                android:id="@+id/gps_test_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.stopLoggingService()}"
                android:text="abort" />

        </LinearLayout>
    </RelativeLayout>

    <!--    </LinearLayout>-->
</layout>